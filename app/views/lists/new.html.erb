<!-- The user can add a new list. Form redictes to all lists. -->
<!-- Navbar-->
<div class= "my-navbar">
  <div class="logo">
    <%= link_to image_tag("Logo.jpg", alt: "Logo", height: 60), lists_path %>
  </div>
  <div class="nav-links">
    <%= link_to "My lists", lists_path, class: "nav-link"%>
    <%= link_to "New list", new_list_path, class: "nav-link"%>
  </div>
</div>

<div class="form-container">
  <h1>Create a new list</h1>

  <%= simple_form_for @list do |f| %>
    <div class="form-group">
      <%= f.input :name, label: "List name", placeholder: "e.g. Drama, Classics, Feel Good..." %>
    </div>

    <div class="form-actions">
      <%= f.submit "Create list", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>


